<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_voting_location_results"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mvhs.sdconnected.VotingLocationResults">

    <TextView
        android:text="My Address:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp"
        android:id="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView3"
        android:layout_toEndOf="@+id/textView3"
        android:layout_marginStart="22dp"
        android:id="@+id/textView4" />

    <TextView
        android:text="Polling Place:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp"
        android:id="@+id/textView5" />

    <TextView
        android:text="Unknown Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nameLabel"

        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_marginTop="26dp" />

    <TextView
        android:text="Unknown Address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addressLine"

        android:layout_below="@+id/nameLabel"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Unknown State"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stateLabel"
        android:layout_below="@+id/addressLine"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp" />

    <TextView
        android:text="Unknown City"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cityLabel"
        android:layout_below="@+id/addressLine"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Unknown Zip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/zipLabel"
        android:layout_below="@+id/stateLabel"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Find on Map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mapButton"
        android:onClick="mapButton"
        android:layout_marginTop="56dp"
        android:layout_below="@+id/zipLabel"
        android:layout_toEndOf="@+id/textView3" />
</RelativeLayout>
